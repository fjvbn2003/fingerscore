<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FingerScore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorPrimaryVariant">@color/bg_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:statusBarColor">@color/bg_dark</item>
    </style>

    <style name="PremiumCard">
        <item name="android:background">@drawable/glass_bg</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ScoreDigit">
        <item name="android:textSize">200sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>
</resources>
