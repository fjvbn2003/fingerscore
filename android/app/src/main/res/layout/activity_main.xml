<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:padding="16dp">

    <!-- Global Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvGlobalStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/connecting"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnResetAll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_rotate"
            android:tint="@color/accent_red" />
    </LinearLayout>

    <!-- Sport Selectors -->
    <LinearLayout
        android:id="@+id/sportSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/glass_bg"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <Button
            android:id="@+id/btnTableTennis"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/table_tennis"
            android:textColor="@color/accent_green" />

        <Button
            android:id="@+id/btnTennis"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tennis"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnBadminton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/badminton"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Scoreboard Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/pairingArea"
        app:layout_constraintTop_toBottomOf="@id/sportSelector">

        <!-- Team A -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/glass_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_a"
                android:textColor="@color/accent_green"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvScoreA"
                style="@style/ScoreDigit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sets"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tvSetsA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnMinusA"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/glass_bg"
                    android:src="@android:drawable/ic_input_delete"
                    android:tint="@color/white" />
                <ImageButton
                    android:id="@+id/plusOneA"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/glass_bg"
                    android:src="@android:drawable/ic_input_add"
                    android:tint="@color/accent_green" />
            </LinearLayout>
        </LinearLayout>

        <!-- Team B -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/glass_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_b"
                android:textColor="@color/accent_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvScoreB"
                style="@style/ScoreDigit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sets"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tvSetsB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnMinusB"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/glass_bg"
                    android:src="@android:drawable/ic_input_delete"
                    android:tint="@color/white" />
                <ImageButton
                    android:id="@+id/plusOneB"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/glass_bg"
                    android:src="@android:drawable/ic_input_add"
                    android:tint="@color/accent_blue" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Pairing Area -->
    <LinearLayout
        android:id="@+id/pairingArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnPairA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/glass_white"
            android:text="@string/pair_ring_a"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnPairB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/glass_white"
            android:text="@string/pair_ring_b"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
